<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#f0f0f0" />
            <stroke android:width="1dp" android:color="#f2f2f2" />
            <corners android:radius="0dp" />
            <padding android:left="0dp" android:top="3dp" android:right="0dp"
                android:bottom="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#f0f0f0" android:endColor="#ffffff" android:angle="270" />
            <stroke android:width="1dp" android:color="#f0f0f0" />
            <corners android:radius="0dp" />
            <padding android:left="0dp" android:top="3dp" android:right="0dp"
                android:bottom="3dp" />
        </shape>
    </item>

</selector>